<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-rename-table-tenant" author="operationly">
        <renameTable oldTableName="tenant" newTableName="organization"/>
    </changeSet>

    <changeSet id="002-rename-column-tenant-to-organization" author="operationly">
        <renameColumn oldColumnName="tenant_id" newColumnName="organization_id" tableName="organization"
                      columnDataType="UUID"/>
    </changeSet>

    <changeSet id="003-rename-column-tenant-id-to-organization-id" author="operationly">
        <renameColumn oldColumnName="tenant_id" newColumnName="organization_id" tableName="user_account"
                      columnDataType="UUID"/>
    </changeSet>

</databaseChangeLog>

